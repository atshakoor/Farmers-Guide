<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_p_loss_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raceme.farmersguide.CostCalculator"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:text="Enter Estimated Sale(per Hec)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toStartOf="@+id/textView" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/estiCost"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"

            android:paddingLeft="50dp"
            android:hint="100tk"
            android:inputType="number"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:text="Enter Actual Sale(per Hec)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/actCost"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"

            android:paddingLeft="80dp"
            android:hint="100tk"
            android:inputType="number"

            />


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate % Profit Or Loss "
        android:layout_gravity="center"
        android:onClick="pPLButton"/>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/esprofitLoss"
        android:layout_weight="5"
        android:paddingTop="150dp"
        android:textAlignment="center"
        android:textSize="20dp"/>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/acprofitLoss"
        android:layout_weight="5"
        android:textAlignment="center"
        android:textSize="20dp"
        />

</LinearLayout>

