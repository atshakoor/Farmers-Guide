<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raceme.farmersguide.SecondActivity"
    android:orientation="vertical"
    android:weightSum="1">

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

    <Button
        android:text="History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="240dp"
        android:id="@+id/btn_Histoty" />
   </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1"
 >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user"
        android:text="Hello User,"
        android:textSize="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the region and year to grow the crop"
        android:textSize="25dp"
        android:paddingTop="10dp"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Select Region "
        android:textSize="20dp"
        android:paddingTop="5dp"
        />
    <Spinner
        android:layout_marginTop="10dp"
        android:layout_width="151dp"
        android:layout_height="40dp"
        android:id="@+id/spinner"
        android:layout_weight="0.10"

        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Select Year and Month"
        android:textSize="20dp"
        android:paddingTop="5dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Spinner
        android:layout_marginTop="10dp"
        android:layout_width="153dp"
        android:layout_height="40dp"
        android:id="@+id/ySpinner" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Spinner
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/mSpinner" />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:text="Okay"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:id="@+id/okay"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="40dp"
        />
</LinearLayout>

</LinearLayout>