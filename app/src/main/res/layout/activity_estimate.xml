<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raceme.farmersguide.Estimate"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:text="Year of Production"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_toStartOf="@+id/textView" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:id="@+id/yearField"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:paddingLeft="20dp"
            android:hint="2010" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_weight="0.12">

        <TextView
            android:text="Crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toStartOf="@+id/textView" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/cropName"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:paddingTop="0dp"
            android:paddingLeft="110dp"
            android:hint="Rice"

            />


    </LinearLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estimated Costs(per Hec):"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_weight="0.12">

        <TextView
            android:text="Seed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toStartOf="@+id/textView" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/seedField"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:paddingTop="0dp"
            android:paddingLeft="110dp"
            android:hint="100tk"


            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_weight="0.12">

        <TextView
            android:text="Fertilizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toStartOf="@+id/textView" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/fertilizerField"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:paddingTop="0dp"
            android:paddingLeft="88dp"
            android:hint="100tk"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_weight="0.12">

        <TextView
            android:text="Spray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toStartOf="@+id/textView" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/sprayField"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:paddingTop="0dp"
            android:paddingLeft="107dp"
            android:hint="100tk"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_weight="0.12">

        <TextView
            android:text="Ploughing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toStartOf="@+id/textView" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/ploughingField"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:paddingTop="0dp"
            android:paddingLeft="80dp"
            android:hint="100tk"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_weight="0.12">

        <TextView
            android:text="Cultivation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toStartOf="@+id/textView" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/cultivationField"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:paddingTop="0dp"
            android:paddingLeft="75dp"
            android:hint="100tk"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_weight="0.12">

        <TextView
            android:text="Maintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toStartOf="@+id/textView" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/maintainField"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:paddingTop="0dp"
            android:paddingLeft="60dp"
            android:hint="100tk"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_weight="0.12">

        <TextView
            android:text="Harvesting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toStartOf="@+id/textView" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/harvestField"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:paddingTop="0dp"
            android:paddingLeft="74dp"
            android:hint="100tk"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_weight="0.12">

        <TextView
            android:text="Others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_toStartOf="@+id/textView" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/othersField"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:paddingTop="0dp"
            android:paddingLeft="100dp"
            android:hint="100tk"

            />


    </LinearLayout>





    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="200dp"
        android:onClick="nextPage"
        />
</LinearLayout>
